@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <div class="border p-4 mt-3">
        <div class="row pb-3">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        @*  <div asp-validation-summary="ModelOnly"></div> *@
        <div class="mt-1 row p-1">
            <label asp-for="Categories.Name" class="p-0"></label>
            <input asp-for="Categories.Name" class="form-control" />
            <span asp-validation-for="Categories.Name" class="text-danger"></span>
        </div>
        <div class="mt-3 mb-2 row p-1">
            <label asp-for="Categories.DisplayOrder" class="p-0"></label>
            <input asp-for="Categories.DisplayOrder" class="form-control" />
            <span asp-validation-for="Categories.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class=" btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>

        </div>
        <hr />
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}