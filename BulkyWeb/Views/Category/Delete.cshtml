@model Category

<form asp-controller="Category" asp-action="Delete" method="post">
    <input asp-for="Id" hidden/>
    <div>
        <div class="border p-4 mt-3">
            <div class="row pb-3">
                <h2 class="text-danger">Delete Category</h2>
                <hr />
            </div>
            <div class="mt-1 row p-1">
                <h4>Are you sure you want to delete this category?</h4>
            </div>
            <div class="mt-3 mb-2 row p-1">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="mt-3 mb-2 row p-1">
                <label asp-for="DisplayOrder" class="p-0"></label>
                <input asp-for="DisplayOrder" class="form-control" readonly />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class=" btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                        Back to List
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>
    </form>